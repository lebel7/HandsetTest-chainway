<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout_top"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/back"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <Button
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/title_btn_back"
                android:text="@string/action_back"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="@string/title_activity_bluetooth_print"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/imgBtnRight"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@drawable/title_btn_right"
                android:contentDescription="@string/action_set"
                android:src="@drawable/mm_title_btn_menu"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/bg_list_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBrowser"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_btn_right"
            android:text="@string/bluetooth_title_file"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_printInfo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_btn_right"
            android:gravity="center"
            android:text="@string/title_not_connected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/list_bg"
        android:gravity="center|top"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:gravity="top|left"
            android:inputType="textNoSuggestions|textMultiLine"
            android:padding="5dp"
            android:scrollbarStyle="outsideOverlay"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:text="@string/PrintContent" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/back"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_print"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="@string/Print" />
    </LinearLayout>

</LinearLayout>