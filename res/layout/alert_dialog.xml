<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="3.0dip"
    android:paddingLeft="3.0dip"
    android:paddingRight="1.0dip"
    android:paddingTop="3.0dip" >

    <LinearLayout
        android:id="@+id/dialogTopPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="54.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dialogTitlePanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="6.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dialogIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingRight="10.0dip"
                android:paddingTop="6.0dip"
                android:src="@drawable/alert_down" />

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5.0dip"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogContentPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12.0dip"
            android:paddingLeft="14.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="2.0dip" >

            <TextView
                android:id="@+id/dialogMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5.0dip"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogCustomPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogBottomPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:minHeight="54.0dip"
        android:minWidth="300dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/titleDivider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/divider"
            android:gravity="fill_horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="2.0dip"
            android:paddingRight="2.0dip"
            android:paddingTop="10.0dip" >

            <Button
                android:id="@+id/dialogButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/dialogButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="6dp"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/dialogButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="6dp"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>