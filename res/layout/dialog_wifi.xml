<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dip" >

    <TableRow
        android:id="@+id/tbBssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
           
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/ap_title_bssid" />

        <TextView
             android:id="@+id/tvBssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/tbSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/ap_title_security" />

        <TextView
            android:id="@+id/tvSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/tbIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/ap_title_ip" />

        <TextView
            android:id="@+id/tvIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/tbPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/ap_title_pwd" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="20" >

            <requestFocus />
        </EditText>
    </TableRow>

</LinearLayout>