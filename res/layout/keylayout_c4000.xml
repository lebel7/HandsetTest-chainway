<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/tv_key1"
            android:layout_width="50dip"
            android:layout_height="150dip"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/textfield_disabled"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_key2"
            android:layout_width="50dip"
            android:layout_height="150dip"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/textfield_disabled"
            android:gravity="center"
            android:ems="1"
            android:text="@string/title_activity_key_power"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_key3"
            android:layout_width="50dip"
            android:layout_height="150dip"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_key2"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/textfield_disabled"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_key4"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_key5"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/title_activity_key_home"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_key6"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/title_activity_key_back"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_key7"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_key8"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_key9"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_key10"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_disabled"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>